// .devcontainer/devcontainer.json
{
  "name": "PyTesseract OCR Project",
  // Usa una imagen de Python de devcontainers, que ya debería tener pip
  //"image": "mcr.microsoft.com/devcontainers/python:0-3.10",
  // O podrías probar una versión más específica o diferente si la 3.10 te da problemas
  "image": "mcr.microsoft.com/devcontainers/python:3.9-bullseye",

  "features": {
    // Instala Tesseract OCR y los paquetes de idioma necesarios
    "ghcr.io/devcontainers/features/apt:1": {
      "packages": "tesseract-ocr tesseract-ocr-eng tesseract-ocr-spa" // Agrega o quita idiomas según necesites
    }
  },

  // Este comando se ejecuta *después* de que el contenedor base está listo y las features instaladas
  "postCreateCommand": "pip install -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.vscode-linter-pylint"
      ]
    }
  },

  // Configuración adicional útil para entornos Python
  "containerEnv": {
    "PYTHONUNBUFFERED": "1" // Útil para la salida en tiempo real
  },
  "remoteUser": "vscode" // Usa el usuario por defecto de devcontainers
}