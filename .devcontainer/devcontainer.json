// .devcontainer/devcontainer.json
{
  "name": "PyTesseract OCR Project",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.9",
  "features": {
    "ghcr.io/devcontainers/features/apt:1": {
      "packages": "tesseract-ocr tesseract-ocr-eng tesseract-ocr-spa"
    }
  },
  "postCreateCommand": "python -m pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.vscode-linter-pylint"
      ]
    }
  },
  "containerEnv": {
    "PYTHONUNBUFFERED": "1"
  },
  "remoteUser": "vscode"
}